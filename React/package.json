{
  "PROJECT CUSTOMIZATION  ----------------------------------------": "",
  "version": "0.9.0",
  "name": "react-project-template",
  "description": "React project template for Vite",
  "homepage": "https://github.com/SamuelAsherRivello/react-project-template/",
  "keywords": [
    "app",
    "react",
    "template",
    "typescript"
  ],
  "PROJECT BASICS  ----------------------------------------------": "",
  "scripts": {
    "CLIENT  ----------------------------------------------------": "",
    "client-start-watch": "vite --host",
    "client-build": "tsc && vite build",
    "TESTS  -----------------------------------------------------": "",
    "tests-start": "vitest run",
    "tests-start-watch": "vitest",
    "tests-start-ui": "vitest --ui",
    "tests-start-coverage": "vitest run --coverage",
    "DOCUMENTATION  ---------------------------------------------": "",
    "documentation-build": "typedoc --options typedoc.json",
    "DEPLOYMENT ( Order of commands matters ) -------------------": "",
    "client-publish": "npm run client-build && npm run documentation-build && gh-pages -d dist",
    "CI/CD  -----------------------------------------------------": "",
    "ci": "npm run tests-start",
    "cd": "npm run tests-start && npm run client-publish",
    "MISC  ------------------------------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx}\""
  },
  "type": "module",
  "main": "index.ts",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.15.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "gh-pages": "^6.1.1",
    "globals": "^13.24.0",
    "jsdom": "^24.1.1",
    "prettier": "^3.3.3",
    "typedoc": "^0.26.5",
    "vite": "^5.0.12",
    "vite-plugin-clean": "^1.0.0",
    "vite-plugin-static-copy": "^1.0.6",
    "vitest": "^2.0.5"
  }
}
